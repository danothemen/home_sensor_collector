# Stage 1: Build the React app
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm i

# Copy frontend source
COPY frontend/ ./

# Build the app
RUN npm run build

# Stage 2: Nginx with RTMP
FROM alfg/nginx-rtmp:latest

# Copy nginx configuration (override both template and conf to prevent runtime overwrites)
COPY nginx.conf /etc/nginx/nginx.conf
COPY nginx.conf /etc/nginx/nginx.conf.template

# Copy built React app from builder stage to the correct location
COPY --from=builder /app/build /www/static
